   print(term.move_xy(25+futuple[0]*2,futuple[1])+term.on_blue+returnCorrectGhostEmoji(PlayerID-1,futuple,Players[PlayerID]["ghosts"][futuple])+term.normal+term.move_xy(50,50),end ='',flush=True)
   return  None
